{
  "manifest_version": 3,
  "name": "Privacy Image Checker",
  "version": "1.0",
  "description": "Detects image uploads and prompts users to check privacy before submitting.",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
  "default_icon": {
    "128": "icons16.jpg"
  },
  "default_popup": "popup.html"
},
"icons": {
  "128": "icons16.jpg"
},
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }
],
  "icons": {
    "128": "icons16.jpg"
  }
}
